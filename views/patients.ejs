<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RxGenius - Patients</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/sidebar') %>
    
    <div class="main-content">
        <%- include('partials/header', { title: 'Patients', subtitle: 'Manage patient records' }) %>
        
        <div class="content-container">
            <div class="action-bar">
                <a href="/patients/add" class="btn-primary">+ Add Patient</a>
            </div>
            
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Patient ID</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Contact</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% patients.forEach(patient => { %>
                            <tr>
                                <td><%= patient.id %></td>
                                <td><%= patient.name %></td>
                                <td><%= patient.age %></td>
                                <td><%= patient.gender %></td>
                                <td><%= patient.contact %></td>
                                <td>
                                    <button class="btn-action">View</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>